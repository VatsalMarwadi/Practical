<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.PrivacyPolicyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@drawable/top"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/bentham"
                        android:gravity="center"
                        android:text="Privacy Policy"
                        android:textColor="#ffffff"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginBottom="60dp"
                        android:background="@drawable/white_back"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/tv1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Updated : 21/02/2025"
                            android:textSize="18sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This Privacy Policy describes how Dreamy Delights (we, us,or our) collects, uses, and shares information about you when you use our mobile application Dreamy Delights."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Information We Collect"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We may collect the following types of information:"
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Information You Provide Directly: \n \n
1.Account Information: If you create an account, we may collect your name, email address, username, and password. \n \n
2.User-Generated Content: If you submit reviews, ratings, photos, or other content, we collect that information. \n \n
3.Communication: If you contact us for support or inquiries, we collect your contact information and the content of your communication. \n \n
4.Location Data: If you allow it, we may collect your precise or approximate location to provide location based features, such as finding nearby dessert locations. \n \n
5.Preferences: If you save favorite desserts, stores, or recipes, we will store this information."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Information We Collect Automatically: \n \n
1.Device Information: We may collect information about your device, including device type, operating system, unique device identifiers, and mobile network information.\n \n
2.Usage Information: We may collect information about how you use the App, including the pages you view, the features you use, and the time and duration of your activities.\n \n Â 
3.Cookies and Similar Technologies: We may use cookies and similar technologies to collect information about your interactions with the App. (If applicable)\n \n
4.Log Data: we log information when you use the app, including IP addresses, and other diagnostic data."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2. How We Use Your Information"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We may use your information for the following purposes:\n \n
1.To provide and maintain the App.\n
2.To personalize your experience.\n
3.To improve and develop the App.\n
4.To communicate with you, including responding to your inquiries and providing customer support.\n
5.To send you promotional materials and updates (with your consent).\n
6.To analyze usage trends and patterns.\n
7.To provide location based services.\n
8.To enforce our terms of service."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3. Sharing Your Information"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We may share your information with:\n\n
1.Service Providers: We may share your information with third-party service providers who assist us in operating the App, such as hosting providers, analytics providers, and customer support providers.\n\n
2.Business Partners: We may share your information with business partners who offer products or services that may be of interest to you (with your consent).\n\n
3.Legal Compliance: We may disclose your information if required by law or in response to a valid legal request.\n\n
4.Business Transfers: In the event of a merger, acquisition, or sale of assets, your information may be transferred as part of the transaction.\n\n
5.With your consent."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4. Data Security"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We take reasonable measures to protect your information from unauthorized access, use, or disclosure. However, no method of transmission over the internet or electronic storage is completely secure, and we cannot guarantee absolute security."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5. Your Choices"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1.Account Information: You can review and update your account information at any time.\n\n
2.Location Information: You can control the collection of your location information through your device settings.\n\n
3.Promotional Communications: You can opt out of receiving promotional communications by following the unsubscribe instructions in the emails we send you.\n\n
4.Data Removal: You can request the deletion of your account and related data. This may limit the functionality of the application."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6. Children's Privacy"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="The App is not intended for children under the age of 12. We do not knowingly collect personal information from children under 12. If we become aware that we have collected personal information from a child under 12, we will take steps to delete it."
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7. Changes to This Privacy Policy"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We may update this Privacy Policy from time to time. We will notify you of any changes by posting the new Privacy Policy on this page. You are advised to review this Privacy Policy periodically for any changes. "
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8. Contact Us"
                            android:textSize="25sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="If you have any questions about this Privacy Policy, please contact us at:\n\n
contact@dreamydelights.in\n\n
32/33 A, Deonar Village Road, Opp. Metal Box Company, Govandi East,Mumbai-400088,Maharashtra, India"
                            android:textSize="20sp"
                            android:fontFamily="@font/bentham"
                            android:textColor="#8F6251"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>